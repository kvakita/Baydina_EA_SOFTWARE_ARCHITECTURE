

'''@startuml SystemContext-ComplianceScoring

!includeurl https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml

title Системный контекст: Платформа скоринга комплаенс-рисков корпоративных клиентов


Person(risk_analyst, "Риск-аналитик", "Запускает проверки компаний и филиалов, анализирует результат скоринга и объяснения.")
Person(strategy_admin, "Администратор стратегий", "Настраивает скоринговые стратегии, правила и пороги по комплаенс-рискам.")
Person(it_ops, "Эксплуатация / DevOps", "Отвечает за развертывание, наблюдаемость и эксплуатационные свойства системы.")


System_Ext(crm, "Внутренний CRM банка", "Хранит базовую информацию о корпоративных клиентах и их филиалах.")
System_Ext(corp_registry, "Внутренний реестр корпоративных клиентов", "Структура владения, связи головных компаний и филиалов.")
System_Ext(gov_registries, "Госреестры (ЕГРЮЛ, ФНС и др.)", "Юридический статус компании, факты ликвидации, смены собственников.")
System_Ext(sanctions_lists, "Санкционные и коммерческие списки", "Информация о включении компании или бенефициаров в санкционные списки.")
System_Ext(authn_system, "Корпоративная система аутентификации", "Единый вход и авторизация пользователей (SSO).")


System_Boundary(sys, "Платформа скоринга комплаенс-рисков") {
    System(system, "Платформа скоринга", "Автоматизирует оценку комплаенс-рисков для компаний и их филиалов, объединяя данные из внутренних и внешних источников.")
}


Rel(risk_analyst, system, "Запускает проверки, просматривает результаты и объяснения", "HTTPS / Web UI")
Rel(strategy_admin, system, "Настраивает стратегии, правила, пороги", "HTTPS / Web UI")
Rel(it_ops, system, "Мониторинг, управление конфигурацией и релизами", "DevOps/Observability toolchain")

Rel(system, crm, "Запрашивает клиентские данные и статусы договоров", "REST / gRPC")
Rel(system, corp_registry, "Получает структуру групп компаний и связи 'голова–филиал'", "REST / API / реплика БД")
Rel(system, gov_registries, "Запрашивает юридические факты и статусы", "API / интеграционный шина")
Rel(system, sanctions_lists, "Проверяет компанию и бенефициаров по спискам", "API / batch")
Rel(system, authn_system, "Проверка SSO-токенов, авторизация ролей", "OIDC / SAML")

@enduml '''
